<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity DocumentStatus.
    -->
    <changeSet id="20250803215903-1" author="ravichiripurapu">
        <createTable tableName="document_status">
            <column name="id" type="varchar(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="code" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="flag_active" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="create_user" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="created_at" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="update_user" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="updated_at" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="uuid" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="document_id" type="varchar(255)">
                <constraints nullable="true" />
            </column>

        </createTable>
        <dropDefaultValue tableName="document_status" columnName="created_at" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="document_status" columnName="updated_at" columnDataType="${datetimeType}"/>
    </changeSet>

    <changeSet id="20250803215903-1-data" author="ravichiripurapu" context="faker">
        <loadData
                  file="config/liquibase/fake-data/document_status.csv"
                  separator=";"
                  tableName="document_status"
                  usePreparedStatements="true">
            <column name="id" type="string"/>
            <column name="name" type="string"/>
            <column name="code" type="string"/>
            <column name="flag_active" type="boolean"/>
            <column name="create_user" type="string"/>
            <column name="created_at" type="date"/>
            <column name="update_user" type="string"/>
            <column name="updated_at" type="date"/>
            <column name="uuid" type="string"/>
        </loadData>
    </changeSet>
</databaseChangeLog>
