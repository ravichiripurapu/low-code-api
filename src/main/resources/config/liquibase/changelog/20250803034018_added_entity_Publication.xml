<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity Publication.
    -->
    <changeSet id="20250803034018-1" author="ravichiripurapu">
        <createTable tableName="publication">
            <column name="id" type="varchar(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="publication_date" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="flag_active" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="create_user" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="created_at" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="update_user" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="updated_at" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="uuid" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="org_id" type="varchar(255)">
                <constraints nullable="true" />
            </column>
        </createTable>
        <dropDefaultValue tableName="publication" columnName="publication_date" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="publication" columnName="created_at" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="publication" columnName="updated_at" columnDataType="${datetimeType}"/>
    </changeSet>

    <changeSet id="20250803034018-1-data" author="ravichiripurapu" context="faker">
        <loadData
                  file="config/liquibase/fake-data/publication.csv"
                  separator=";"
                  tableName="publication"
                  usePreparedStatements="true">
            <column name="id" type="string"/>
            <column name="title" type="string"/>
            <column name="publication_date" type="date"/>
            <column name="flag_active" type="boolean"/>
            <column name="create_user" type="string"/>
            <column name="created_at" type="date"/>
            <column name="update_user" type="string"/>
            <column name="updated_at" type="date"/>
            <column name="uuid" type="string"/>

        </loadData>
    </changeSet>
</databaseChangeLog>
